<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".P6_PantallaVerificacionDocumento">

    <TextView
        android:id="@+id/textView_VerificacionDocumento"
        android:layout_width="195dp"
        android:layout_height="19dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif"
        android:text="Comprobar DNI del interesado"
        android:textColor="#2A2A2A"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f5f5f5"/>

    <EditText
        android:id="@+id/Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nombre"
        android:textColor="#A6A5A5"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textColorHint="#A6A5A5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f5f5f5"/>

    <EditText
        android:id="@+id/Apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Apellido"
        android:textColor="#A6A5A5"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textColorHint="#A6A5A5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f5f5f5"/>

    <EditText
        android:id="@+id/Documento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Documento"
        android:textColor="#A6A5A5"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textColorHint="#A6A5A5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f5f5f5"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnComprobar"
        android:layout_width="296dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:text="Comprobar"
        android:textColor="#2A2A2A"
        android:background="@drawable/button_border_2"
        android:textSize="32sp"
        android:textAllCaps="false"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#f5f5f5"
        >
    </LinearLayout>



</LinearLayout>