<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="630dp"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".P4_PantallaHome">

    <TextView
        android:id="@+id/textView_NombreApp_1"
        android:layout_width="193dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif"
        android:text="Adrenalina"
        android:textColor="#2A2A2A"
        android:textSize="48sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/textView_SistemaDeGestion"
        android:layout_width="163dp"
        android:layout_height="19dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif"
        android:text="SISTEMA DE GESTION"
        android:textColor="#2A2A2A"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnInscripcion"
        android:layout_width="296dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:text="InscripciÃ³n"
        android:background="@drawable/button_border_1"
        android:textColor="#2A2A2A"
        android:textSize="32sp"
        android:textAllCaps="false"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPagos"
        android:layout_width="296dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:text="Pagos"
        android:background="@drawable/button_border_1"
        android:textColor="#2A2A2A"
        android:textSize="32sp"
        android:textAllCaps="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnListados"
        android:layout_width="296dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:text="Listados"
        android:background="@drawable/button_border_1"
        android:textColor="#2A2A2A"
        android:textSize="32sp"
        android:textAllCaps="false"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnActividades"
        android:layout_width="296dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:text="Actividades"
        android:background="@drawable/button_border_1"
        android:textColor="#2A2A2A"
        android:textSize="32sp"
        android:textAllCaps="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="#f5f5f5"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>